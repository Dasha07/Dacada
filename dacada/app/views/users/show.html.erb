<h2><%= @user.first_name %> <%= @user.last_name %></h2>
<a class="btn btn-primary" href="/user/<%= @user.id %>/edit">Edit Profile</a>
<a class="btn btn-primary" href="/logout">Logout</a>
<a class="btn btn-primary" href="/deals">Today's Deals</a>
<h4>Purchase History</h4>
<table>
    <tr>
        <th>Item</th>
        <th>Cost</th>
        <th>Date of Purchase</th>
        <th>Your Review</th>
    </tr>
    <% @history.each do |item| %>
        <tr>
            <% purchase = Purchase.where(item:item).where(user:@user).first %>
            <td><%= item.name %></td>
            <td>$<%= purchase.quantity*item.price %></td>
            <td><%= purchase.created_at.strftime('%b %d, %Y') %></td>
            <% if purchase.item.reviews.find_by(user:@user) %>
                <td><%= purchase.item.reviews.find_by(user:@user).content %></td>
            <% else %>
                <td><a href="/review/<%= item.id %>">Add a Review</a></td>
            <% end %>
        </tr>
    <% end %>
</table>
