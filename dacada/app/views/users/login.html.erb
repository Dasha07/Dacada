<div class="container">
  <div class="header">
    <div class="row">
      <div class="col-md-12">
        <div style="margin-left: 275px;">
          <%= link_to image_tag("http://imgur.com/7IDTkAo.png", :alt => "logo") %>
        </div>
        <h3 class="text-center">Daily deals on things you never knew you needed.</h3><br>
        <h2 class="text-center">Please log in to your account:</h2>
      </div>
    </div>
  </div>

  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <h4> <%= error[1][0] unless error[0] == "password" %> </h4>
    <h4> <%= error[1][1] if error[0] == "password" %> </h4>
    <% end %>
  <% end %>

  <div class="row">
    <div class="col-md-4">
      <form action="/login" method="post" class="form-group">
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <div class="form-group <%= if flash[:errors] then 'has-danger' end %>">
          <label class="form-control-label">Email:
            <input class="form-control <%= if flash[:errors] then 'form-control-danger' end %>" type="text" name="email"></label>
            <% if flash[:errors]%>
            <div class="form-control-feedback"><%= flash[:errors][:login] %></div>
            <% end %>
        </div>
        <a class="btn btn-info" href="/register">Register</a>
    </div>
    <div class="col-md-4">
      <div class="form-group <%= if flash[:errors] then 'has-danger' end %>">
        <label class="form-control-label">Password:
          <input class="form-control <%= if flash[:errors] then 'form-control-danger' end %>" type="password" name="password"></label>
          <% if flash[:errors] %>
          <div class="form-control-feedback"><%= flash[:errors][:login] %></div>
          <% end %>
      </div>
        <input type="submit" name="" value="Log in" class="btn btn-primary">
      </form>
    </div>
  </div>
</div>
