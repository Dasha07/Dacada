<h1>My Cart</h1>


<% if @added %>
  Item:  <%= @item.name %></a></br>
  Price: $<%= @item.price %>
  <form class="" action="/add_to_cart" method="post">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <input type="hidden" name="item_id" value="<%= @item.id %>">
    <input type="number" name="amount" min="1" max="100" step='1' value="1"></br>
    <input type="submit" name="cartBtn" value="Add to Cart">
  </form>
<% end %>


<% @cart.each_with_index do |id, index| %>
  <%= Item.find(id).name %> <a href="/cancel/<%= index %>">Cancel</a></br>
<% end %>


