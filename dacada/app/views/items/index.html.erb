<%= link_to image_tag("Dacada_Logo.png", :alt => "logo") %>
<h3>Check out today's deals and see what's waiting for you in the wings!</h3>
<a class="btn btn-primary" href="/logout">Logout</a>
<% if session[:user_id] != nil %>
  <a class="btn btn-primary" href="/user/<%= @user.id %>">My Profile</a>
<% else %>
  <a href="/register">Sign Up</a>
<% end %>

<div class="card" style="width: 275px; background-color:rgb(88, 215, 208); border: 2px solid lightgrey;">
  <% @deals.each do |deal| %>
    <div class="card-block">
      <p>Item name:<a href="/deal/<%= deal.id %>"><%= deal.name %></a></p>
      <p>Description: <%= deal.description %></p>
      <p>Price: $<%= deal.price %></p>
      <p>Date: <%= deal.deal_date.strftime('%B %d, %Y') %></p>
      <p>Manufacturer: <%= deal.manufacturer %></p>
      <p>Stock #: <%= deal.stock %></p>
      <p>Category: <%= deal.category_id %></p>
    </div>
  <% end %>
</div>

<div class="card" style="width:275px; background-color:lightgrey; border: 2px solid rgb(88, 215, 208); margin-top: 10px;">
  <% @items.each do |item| %>
    <div class="card-block" style="margin-top: 10px;">
      <p>Item name:<a href="/deal/<%= item.id %>"><%= item.name %></a></p>
      <p>Description: <%= item.description %></p>
      <p>Price: $<%= item.price %></p>
      <p>Date: <%= item.deal_date.strftime('%B %d, %Y') %></p>
      <p>Manufacturer: <%= item.manufacturer %></p>
      <p>Stock #: <%= item.stock %></p>
      <p>Category: <%= item.category.name %></p>
    </div>
  <% end %>
</div>
