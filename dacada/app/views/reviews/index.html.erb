<h1>Add Comment for <%= @item.name %></h1>
<form class="" action="/review/<%= @item.id %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    Title <input type="text" name="title" value=""> <br>
    Content <textarea name="content" rows="8" cols="80"></textarea> <br>
    Rating <input type="number" name="rating" min="1" max="10" step='1' value="5"> / 10 <br>
    <input type="submit" name="reviewBtn" value="Submit Review">
</form>
